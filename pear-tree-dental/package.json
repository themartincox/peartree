{
  "name": "nextjs-shadcn",
  "version": "0.1.2",
  "private": true,
 "scripts": {
  "dev": "next dev -H 0.0.0.0",
  "build": "next build",
  "build:production": "DISABLE_ESLINT_PLUGIN=true SKIP_ENV_VALIDATION=true NODE_ENV=production next build --no-lint",
  "build:optimized": "DISABLE_ESLINT_PLUGIN=true SKIP_ENV_VALIDATION=true NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' next build --no-lint",
  "build:analyze": "ANALYZE=true ./node_modules/.bin/next build",
  "postbuild": "node scripts/generate-sitemap.mjs",
  "start": "next start",
  "lint": "bunx biome lint --write && bunx tsc --noEmit",
  "format": "bunx biome format --write",
  "type-check": "bunx tsc --noEmit",
  "validate-contacts": "node .same/contact-validation-script.js",
  "pre-deploy-check": "bun run validate-contacts && bun run lint",
  "sitemap:update": "node scripts/update-sitemap.js",
  "sitemap:build": "tsc src/utils/sitemap-generator.ts --outDir dist --target es2020 --module esnext --moduleResolution node --allowSyntheticDefaultImports --esModuleInterop",
  "sitemap:stats": "npm run sitemap:build && node -e \"import('./dist/utils/sitemap-generator.js').then(m => m.getSitemapStats('./src/app').then(console.log))\"",
  "sitemap:force": "FORCE_UPDATE=true node scripts/update-sitemap.js",
  "generate-sitemap:legacy": "node scripts/generate-sitemap.js",
  "sitemap:crawl": "node scripts/generate-full-sitemap.mjs --base https://peartree.dental --out public --include /services --include /book --include /contact --include /reviews --include /blog --follow-nofollow --rate 4",
  "prebuild": "echo 'Using Next.js App Router sitemap generation'"
}
  "dependencies": {
